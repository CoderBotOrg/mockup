<html>
	<head>
		<% include head.ejs %>
		<link rel="stylesheet" href="editor.css">
		<script type="text/javascript" src="interact.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.6.1/Sortable.min.js"></script>
		<script type="text/javascript" src="editor.js"></script>
		<script type="text/javascript">
			$(document).ready(function() {
				Materialize.updateTextFields();
			$(".brand-logo").sideNav();
			// Editable list
		var editableList = Sortable.create(editable, {
		filter: '.js-remove',
		onFilter: function (evt) {
			var el = editableList.closest(evt.item); // get dragged item
			el && el.parentNode.removeChild(el);
		}
		});
			
			})
		</script>
	</head>
	<body>
		<% include sidemenu.ejs %>
		<% include navbar.ejs %>
		<br>
		<div class="row">
			<div class="col s12">
				<div class="row">
					<div class="tabs">
						<ul class="tabs">
							<li class="tab">
								<a class="active" href="#general">Generali</a>
							</li>
							<li class="tab">
								<a  href="#toolbar">Barra degli Strumenti</a>
							</li>
							<li class="tab">
								<a href="#command">Palette dei Comandi </a>
							</li>
							<li class="tab">
								<a href="#runtime">Vista in Esecuzione</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div class="fixed-action-btn">
			<a class="btn-floating btn-large blue"> <b> SALVA </b>
			</a>
		</div>
		<div class="row">
			<div class="col s12">
				
				<div id="general" class="tab-content">
					
					<div class="row">
						<div class="col s6">
							<h5> Dati Progetto </h5>
							<br>
							<div class="input-field">
								<input value="Progetto 1" id="first_name2" type="text" class="validate">
								<label class="active" for="first_name2">Nome</label>
							</div>
							<div class="input-field ">
								<textarea id="textarea1" class="materialize-textarea"></textarea>
         				 	<label for="textarea1">Descrizione</label>
							</div>
							<div  class="input-field">
										<select>
											<option value="1" selected>Visuale Esecuzione</option>
											<option value="2">Editor di Blocchi</option>
											<option value="3">Editor Python</option>
										</select>
										<label class="select-label">Vista Predefinita</label>
									</div>
									<br>
							<h5> Tipografia </h5>
							<br>
							<div  class="input-field">
										<select>
											<option value="1" selected>Piccolo</option>
											<option value="2">Medio</option>
											<option value="3">Grande</option>
										</select>
										<label class="select-label">Grandezza Testo</label>
									</div>
						</div>

						<div class="col s6">
							<h5> Funzioni </h5>
							<br>
							<form action="#">
								<p>
									<input onclick="triggerEditorType()" type="checkbox" id="pyEditorCheckbox" />
									<label for="pyEditorCheckbox">Editor Python</label>
									<div id="editorSelect" class="input-field" style="display:none">
										<select>
											<option value="1" selected>Principiante</option>
											<option value="2">Intermedio</option>
											<option value="3">Controllo completo sulle API</option>
										</select>
										<label class="select-label">Livello dell'Editor</label>
									</div>
								</p>
								<p>
									<input type="checkbox" id="intermediateCheckbox" />
									<div  class="input-field">
										<select>
											<option value="1" selected>Mai (Disabilitato)</option>
											<option value="2">Prima di ogni esecuzione</option>
											<option value="3">Ogni Minuto</option>
											<option value="4">Ogni 5 Minuti</option>
											<option value="5">Ogni 30 Minuti</option>
											<option value="6">Ogni Ora</option>
										</select>
										<label class="select-label">Aggiorna cronologia modifiche</label>
									</div>
									<div  class="input-field">
										<select>
											<option value="1" selected>Mai (Disabilitato)</option>
											<option value="2">Prima di ogni esecuzione</option>
											<option value="3">Ogni Minuto</option>
											<option value="4">Ogni 5 Minuti</option>
											<option value="5">Ogni 30 Minuti</option>
											<option value="6">Ogni Ora</option>
										</select>
										<label class="select-label">Salva automaticamente</label>
									</div>
								</p>
								<p>
									<input type="checkbox" id="pyExportCheckbox" />
									<label for="pyExportCheckbox">Permetti di visualizzare il codice Python generato</label>
								</p>
								<p>
									<input type="checkbox" id="pyEditCheckbox" />
									<label for="pyEditCheckbox">Permetti di modificare il codice Python generato</label>
								</p>
								
							</form>
						</div>
					</div>
					
					
				</div>
				
				<div id="toolbar" class="tab-content active">
					<div class="col s6">
						<div id="yes-drop" class="draggable drag-drop"> Salva </div>
						<div id="yes-drop" class="draggable drag-drop"> Esegui</div>
						<div id="yes-drop" class="draggable drag-drop"> Simula </div>
						<div id="yes-drop" class="draggable drag-drop"> Aiuto </div>
						<div id="inner-dropzone" class="dropzone">Trascina qui gli elementi da visualizzare nella barra superiore</div>
					</div>
				</div>
				
				<div id="command" class="tab-content">
					Palette Comandi
				</div>
				<div id="runtime" class="tab-content">
					<form action="#">
						<p>
							<input onclick="enableRuntime()" type="checkbox" id="runtimeCheckbox" />
							<label for="runtimeCheckbox">Abilita Vista in Esecuzione</label>
						</p>
					</form>
				</div>
			</div>
			<div class="col s1"></div>
		</div>
	</div>
</body>
</html>